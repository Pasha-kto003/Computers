<Page x:Class="Computers.AddGroupView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Computers"
      mc:Ignorable="d" 
      d:Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddGroupView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <DataGrid x:Name="GroupsDataGrid" ItemsSource="{Binding Groups}" SelectedItem="{Binding SelectedGroup}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID компьютера"/>
                    <DataGridTextColumn Header=""/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
